{
  "name": "Obsidian Pulse Theme",
  "colors": {
    "editor.background": "#1B1D2A",
    "editor.foreground": "#D8DEE9",
    "editorCursor.foreground": "#FF79C6",
    "editor.lineHighlightBackground": "#2A2A3C",
    "editor.selectionBackground": "#44475A",
    "editor.inactiveSelectionBackground": "#3B3B55",
    "activityBar.background": "#222536",
    "activityBar.foreground": "#F8F8F2",
    "activityBarBadge.background": "#FF79C6",
    "sideBar.background": "#222536",
    "sideBarTitle.foreground": "#F8F8F2",
    "statusBar.background": "#181A26",
    "statusBar.foreground": "#F8F8F2",
	"titleBar.activeBackground": "#1A1C28",
	"titleBar.inactiveBackground": "#151726",
	"titleBar.activeForeground": "#F8F8F2",
	"titleBar.inactiveForeground": "#A6ADC8",
	"tab.activeBackground": "#1E2030",
	"tab.inactiveBackground": "#1A1C28",
	"tab.activeForeground": "#F8F8F2",
	"tab.inactiveForeground": "#A6ADC8",
	"tab.activeBorder": "#FF79C6",
	"editorGroupHeader.tabsBackground": "#1B1D2A",
	"editorGroup.border": "#222536",
	"editorGroup.emptyBackground": "#1B1D2A"

  },
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "foreground": "#6272A4",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Keywords",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#FF79C6"
      }
    },
    {
      "name": "Functions & Methods",
      "scope": ["entity.name.function", "support.function", "variable.function"],
      "settings": {
        "foreground": "#50FA7B"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#F8F8F2"
      }
    },
    {
      "name": "Strings",
      "scope": ["string", "constant.other.symbol"],
      "settings": {
        "foreground": "#8FFFC1"
      }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric", "constant.language", "support.constant"],
      "settings": {
        "foreground": "#BD93F9"
      }
    },
    {
      "name": "Types & Classes",
      "scope": ["support.type", "entity.name.type", "entity.name.class", "support.class"],
      "settings": {
        "foreground": "#8BE9FD"
      }
    },
    {
      "name": "Operators & Punctuation",
      "scope": ["keyword.operator", "punctuation"],
      "settings": {
        "foreground": "#FFB86C"
      }
    },
    {
      "name": "Decorators & Annotations",
      "scope": ["meta.decorator", "annotation"],
      "settings": {
        "foreground": "#FF79C6",
        "fontStyle": "italic"
      }
    },
    {
      "name": "HTML Tags & Attributes",
      "scope": ["entity.name.tag", "entity.other.attribute-name"],
      "settings": {
        "foreground": "#FFB86C"
      }
    },
    {
      "name": "Invalid / Error",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FF5555"
      }
    }
  ]
}
